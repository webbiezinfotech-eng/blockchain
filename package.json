{
  "name": "blockchain-react-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run backend\" \"vite\"",
    "build": "vite build",
    "preview": "vite preview",
    "backend": "cd backend && node server.js",
    "server": "cd backend && node server.js",
    "start": "cd backend && node server.js",
    "dev:all": "concurrently \"npm run backend\" \"vite\"",
    "pm2:start": "cd backend && pm2 start server.js --name blockchain-email-server",
    "pm2:stop": "cd backend && pm2 stop blockchain-email-server",
    "pm2:restart": "cd backend && pm2 restart blockchain-email-server"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "aos": "^2.3.4",
    "cors": "^2.8.6",
    "dotenv": "^16.6.1",
    "express": "^4.22.1",
    "nodemailer": "^6.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.30.2",
    "sweetalert2": "^11.26.20"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "vite": "^5.0.8"
  }
}
